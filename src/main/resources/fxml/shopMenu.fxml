<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="stackPane" style="-fx-background-color: #3d3d3d;"
         type="StackPane" xmlns="http://javafx.com/javafx/8.0.121">
    <children>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                    prefHeight="720.0" prefWidth="1280.0" styleClass="shop-menu">
            <top>
                <BorderPane prefHeight="100.0" prefWidth="200.0" styleClass="shop-banner" BorderPane.alignment="CENTER">
                    <right>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="shop-label" text="Shop"
                              textAlignment="RIGHT" BorderPane.alignment="CENTER">
                            <font>
                                <Font name="Century Gothic" size="45.0"/>
                            </font>
                            <BorderPane.margin>
                                <Insets right="30.0"/>
                            </BorderPane.margin>
                            <fill>
                                <LinearGradient endX="1.0" endY="1.0" startY="1.0">
                                    <stops>
                                        <Stop color="#e181e1"/>
                                        <Stop color="#ffcd00" offset="0.007246376811594203"/>
                                        <Stop color="#e84c3d" offset="1.0"/>
                                    </stops>
                                </LinearGradient>
                            </fill>
                        </Text>
                    </right>
                    <left>
                        <Text fill="#8d8d8d" onMouseClicked="#onBackClicked" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Back" textAlignment="RIGHT" BorderPane.alignment="CENTER">
                            <font>
                                <Font name="Century Gothic" size="45.0"/>
                            </font>
                            <BorderPane.margin>
                                <Insets left="30.0"/>
                            </BorderPane.margin>
                        </Text>
                    </left>
                </BorderPane>
            </top>
            <center>
                <VBox BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                    <children>
                        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="1260.0">
                            <children>
                                <Text fill="#838383" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Welcome to the Shop! You have: " textAlignment="RIGHT">
                                    <font>
                                        <Font name="Century Gothic" size="20.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Text>
                                <Text fx:id="lipCoinLabel" fill="#e84c3d" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="1000 LipCoins." textAlignment="RIGHT">
                                    <font>
                                        <Font name="Century Gothic" size="20.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets top="1.0"/>
                                    </HBox.margin>
                                </Text>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </HBox>
                        <GridPane alignment="CENTER" prefHeight="700.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="315.0" minWidth="10.0"
                                                   prefWidth="315.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1018.0" minWidth="10.0"
                                                   prefWidth="315.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="315.0" minWidth="10.0"
                                                   prefWidth="347.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="315.0" minWidth="10.0"
                                                   prefWidth="315.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </GridPane>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</fx:root>
